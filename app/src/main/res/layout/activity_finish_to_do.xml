<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.rommelrico.todolistkotlin.FinishToDoActivity">

    <TextView
            android:text="@string/titleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleTextView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" tools:text="To Do Item Text" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:textSize="24sp"/>
    <Button
            android:text="@string/completeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/completeButton" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/titleTextView" tools:text="COMPLETE"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>
